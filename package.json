{
  "name": "swir-audiometry-app",
  "version": "1.0.9",
  "description": "Speech Audiometry Scoring Application",
  "main": "electron/main.js",
  "scripts": {
    "start": "webpack serve --mode development --port 3001",
    "build": "webpack --mode production",
    "electron": "electron . --no-sandbox",
    "dev": "concurrently \"npm start\" \"wait-on http://localhost:3001 && npm run electron\"",
    "package": "npm run build && electron-builder"
  },
  "keywords": [
    "audiometry",
    "speech",
    "electron",
    "react"
  ],
  "author": "Mark Shaver <mark.shaver@hearinglife.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-react": "^7.22.15",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "electron": "^40.0.0",
    "electron-builder": "^26.5.0",
    "html-webpack-plugin": "^5.5.3",
    "style-loader": "^3.3.3",
    "wait-on": "^7.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.3"
  },
  "dependencies": {
    "jspdf": "^4.0.0",
    "jspdf-autotable": "^5.0.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "build": {
    "appId": "com.audiometry.app",
    "productName": "SWIR-Audiometry",
    "executableName": "swir-audiometry",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "audio_output/**/*",
      "sentences.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Science",
      "maintainer": "Mark Shaver <mark.shaver@hearinglife.com>",
      "icon": "assets/icon.png"
    }
  }
}
